root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
charset = utf-8

[*.txt]
insert_final_newline = false

[*.yaml]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 2

[*.json]
indent_size = 2

[*.tpl]
indent_size = 2

[*.sh]
indent_size = 2

[*.rst]
indent_size = 2
